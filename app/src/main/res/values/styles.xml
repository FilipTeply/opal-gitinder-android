<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:actionBarStyle">@style/GiTinderBar</item>
    <item name="actionBarStyle">@style/GiTinderBar</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorActionBar</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/textColor</item>
  </style>

  <!-- Base application theme. -->
  <style name="GiTinderBar" parent="Widget.AppCompat.Light.ActionBar">
    <item name="android:icon">@mipmap/gitinder_logo</item>
    <item name="icon">@mipmap/gitinder_logo</item>
    <item name="android:background">#F7430C</item>
    <item name="background">@color/colorActionBar</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
